CELL_TYPSE = "ðŸŸ©ðŸŒ²ðŸŒŠðŸ¥ðŸª"

class Map:

    # def generate_rivers():
    # def generate_forest():

    def print_map(self):
        print("â¬›" * (self.w + 2))
        for row in self.cells:
            print("â¬›", end="")
            for cell in row:
                if (cell >= 0 and cell < len(CELL_TYPSE)):
                    print(CELL_TYPSE[cell], end="")
            print("â¬›")
        print("â¬›" * (self.w + 2))

    def check_bounds(self, x ,y):
        if (x < 0 or y < 0 or x >= self.h  or y >= self.w):
            return False
        return True

    def __int__(self, w, h):
        self.w = w
        self.h = h
        self.cells = [[0 for i in range(w)] for j in range(h)]

tmp = Map(20, 10)
tmp.cells[1][1] = 2 
tmp.print_map()
